extends ../layout

block content
            .container.register-body
              .row
                .col-lg-6
                  h2.form-register-heading REGISTRATION FORM 
                  h3 Let us know you better:
                .col-lg-6
                  form.form-register(action='/register' method='POST' )
                    label.sr-only(for='inputEmail') Email address
                    input#inputEmail.form-control(name='newUser', type='email', placeholder='Email address', required='', autofocus='')
                    label.sr-only(for='inputPassword') Password
                    input#inputPassword.form-control(name='newPassword', type='password', placeholder='Password', required='')
                    .checkbox
                      label
                        input(type='checkbox', value='remember-me')
                        |  Remember me
                    button.btn.btn-lg.btn-success.btn-block.login-button(type='submit') Register